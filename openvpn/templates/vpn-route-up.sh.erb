#!/bin/bash
exec >/tmp/vpn-route.log 2>&1
set -ix
env

table=ffffm

mask2cdr ()
{
   # Assumes there's no "255." after a non-255 byte in the mask
   local x=${1##*255.}
   set -- 0^^^128^192^224^240^248^252^254^ $(( (${#1} - ${#x})*2 )) ${x%%.*}
   x=${1%%$3*}
   echo $(( $2 + (${#x}/4) ))
}

convertIpAndNetmaskToCIDR() {

  input="${1}/$(mask2cdr $2)"
  ip=${input%%/*}
  net=${input##*/}
  [[ -z $2 ]] && 
  {
    net=32
    output=$1
  }
  
  if [ $net -lt 32 ]
  then
    # volle oktette
    foctets=$((net/8))
  
    # array of IP-octets
    ipa=( $(echo ${ip//./ }) )
  
    output=""
    for ((i=0;i<foctets;i++))
    do
      output="$output${ipa[i]}."
    done
  
    roctet=$((net-(8*foctets)))
    mask=""
    for ((i=0;i<8;i++))
    do
      if [ $i -lt $roctet ]
      then
        mask="${mask}1"
      else
        mask="${mask}0"
      fi
    done
  
    output="${output}$((${ipa[foctets]}&2#$mask))"
  
    for ((i=foctets;i<3;i++))
    do
      output="${output}.0"
    done
  
  fi
  echo $output/$net
}

