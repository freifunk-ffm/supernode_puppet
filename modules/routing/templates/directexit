#!/bin/bash
asList=(
	714   # Apple
	19679 # Dropbox
	57976 # Blizzard
	50472 # CCC
	13020 # CCCV 
	32934 # Facebook
	15169 # Google
	8075  # Micro$oft
	2906  # Netflix
	36692 # OpenDNS
	8403  # Spotify
	46489 # Twitch
	13414 # Twitter
	32590 # Valve
	10310 # Yahoo
	8302  # Zattoo
	32787 # AKAMAI (other)
	20940 # AKAMAI
	13335 # CLOUDFLARE
	43821 # WIKIMEDIA-EU
	14907 # WIKIMEDIA-USA 
	
	#Freifunk
	44194  # Freifunk Berlin
	3624   # Freifunk Bremen
	6766   # Freifunk Darmstadt
	201701 # Freifunk Rheinland
	49009  # Freifunk Rheinland / Hamburg
)


ipsetCreate() {
# TODO test this line
/sbin/ipset list |grep -q "^${1}$" || /sbin/ipset -exist create $1 hash:net family inet$2 hashsize 2048 maxelem 65536
}

ipsetCreate exit ""
ipsetCreate exit-temp ""
ipsetCreate exit6 6
ipsetCreate exit-temp 6

# Ipsets to add
ipsets=(exit exit6)
# Grep parameter for ipsets
grepcmd=('-v :' ':')


# Add ip ranges to ipset
ipsetAdd() {
	local ipset
	ipset=$1

	while read; do
		ipset -exist add "$ipset" "$REPLY"
	done
}


for ((i=0; i<${#ipsets[@]}; i++)); do
	ipset flush "${ipsets[i]}-temp"
done

for as in "${asList[@]}"; do
	# Get IPs
	asdata=$(curl -s 'https://stat.ripe.net/data/announced-prefixes/data.json?min_peers_seeing=0&resource='$as|jq --raw-output .data.prefixes[].prefix)

	for ((i=0;i<${#ipsets[@]};i++)); do
		# Add IPs to ipset
		ipsetAdd "${ipsets[i]}-temp" < <(echo "${asdata}" | grep ${grepcmd[i]})
	done
done

## Apply and cleanup
for ((i=0; i<${#ipsets[@]}; i++)); do
	ipset swap "${ipsets[i]}" "${ipsets[i]}-temp"
	ipset flush "${ipsets[i]}-temp"
done

